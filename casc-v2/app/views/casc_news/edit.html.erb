<%
    ntypes = [ 'news', 'release', 'success', 'event', 'test' ]

%>
<div class="flex-col border border-regular border-4 rounded-3xl mt-4 mx-6 highlight-bg">
  <div class="flex w-full h-fit border-b border-b-4 border-regular">
    <h2 class="w-full text-center">Edit news</h2>
    <span class="ml-auto  my-2">
      <%= heroicon "arrows-pointing-out", variant: :solid, options: { class: "h-8 w-8 text-gray-300 hover:text-white cursor-pointer" } %>
    </span>
    <span class="m-2">
      <a href="/">
        <%= heroicon "x-circle", variant: :solid, options: { class: "h-8 w-8 text-red-300 hover:text-red-500 cursor-pointer" } %>
      </a>
    </span>
  </div>
  <%= form_with model: @casc_news, method: :post, class: "h-full" do |f| %>
    <div class="flex p-4">
      <div class="flex-col w-1/3 mx-auto">
        <%= f.label :title, class: "ml-6 green-text text-sm" %>
        <div class="mx-4 w-64">
          <%= f.text_field :title, autocomplete: "off", class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll" %>
        </div>
      </div>
      <div class="flex-col w-1/3 mx-auto">
        <%= f.label :nType, "News type", class: "ml-6 green-text text-sm" %>
        <div class="mx-4 w-64">
          <%= f.select :nType, ntypes, {}, {class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll"}%>
        </div>
      </div>
      <div class="flex-col w-1/3 mx-auto">
        <%= f.label :user_id, "Author", class: "ml-6 green-text text-sm" %>
        <div class="mx-4 w-64">
          <%= f.text_field :user_id, autocomplete: "off", value: "[#{current_user.id}] - #{current_user.name}", disabled: true, class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll" %>
        </div>
      </div>
    </div>
    <div class="flex p-4">
      <div class="flex-col w-full mx-auto">
        <%= f.label :content, "Text", class: "ml-6 green-text text-sm" %>
        <div class="mx-4 ">
          <%= f.text_area :content, autocomplete: "off", class: "w-full h-64 rounded-lg highlight-bg-accent border-none overflow-scroll" %>
        </div>
      </div>
    </div>
    <div class="flex">
      <div class="m-8 mx-auto w-32">
        <%= f.submit "Save", class: "px-8 py-2 text-base border w-full rounded-lg border-action-green format-h2" %>
      </div>
    </div>
  <%end%>
</div>