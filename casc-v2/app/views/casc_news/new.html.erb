<%
    ntypes = [ 'news', 'release', 'success', 'event', 'test' ]

%>
<div class="flex-col border border-regular border-4 rounded-3xl mt-4 mx-6 highlight-bg">
  <h1 class="w-full text-center">Create news</h1>
  <%= form_with model: @casc_news, method: :post, class: "h-full" do |f| %>
    <div class="flex p-4">
      <div class="flex-col w-1/3 mx-auto">
        <%= f.label :title, class: "ml-6 green-text text-sm" %>
        <div class="mx-4 w-64">
          <%= f.text_field :title, autocomplete: "off", class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll" %>
        </div>
      </div>
      <div class="flex-col w-1/3 mx-auto">
        <%= f.label :ntype, "News type", class: "ml-6 green-text text-sm" %>
        <div class="mx-4 w-64">
          <%= f.select :ntype, ntypes, {}, {class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll"}%>
        </div>
      </div>
      <div class="flex-col w-1/3 mx-auto">
        <%= f.label :user_id, "Author", class: "ml-6 green-text text-sm" %>
        <div class="mx-4 w-64">
          <%= f.text_field :user_id, autocomplete: "off", value: "[#{current_user.id}] - #{current_user.name}", disabled: true, class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll" %>
        </div>
      </div>
    </div>
    <div class="flex p-4">
      <div class="flex-col w-full mx-auto">
        <%= f.label :content, class: "ml-6 green-text text-sm" %>
        <div class="mx-4 ">
          <%= f.text_area :content, autocomplete: "off", class: "w-full h-full rounded-lg highlight-bg-accent border-none overflow-scroll" %>
        </div>
      </div>
    </div>
    <div class="flex p-4">
      <div class="flex-col mx-auto">
        <%= f.submit "Save", class: "w-full text-center text-green-500 hover:text-green-600 font-bold py-2 px-4 rounded-lg" %>
      </div>
    </div>
  <%end%>
</div>