<div class="flex-col h-full w-full">
  <div class="flex px-4" style="height: 6vh">
    <span class="my-auto">
      Total rows: <%= Category.all.count %>
    </span>
    <span class="ml-auto my-auto">
      <%= addButton("Add a category", new_category_path()) %>
    </span>
  </div>
  <div class="flex-col w-full overflow-scroll rounded-b-3xl" style="height: 74vh">
    <table class="w-full relative text-base text-left rtl:text-right">
      <thead class="green-text uppercase">
        <tr class="sticky top-0 highlight-bg-accent ">
          <th scope="col" class="px-4 py-3">
            <div class="flex items-center">
              title
            </div>
          </th>
          <th scope="col" class="px-4 py-3">
            <div class="flex items-center">
              creation date
            </div>
          </th>
          <th scope="col" colspan="2" class="px-4 py-3">
            <div class="flex items-center">
              description
            </div>
          </th>
          <th scope="col" class="px-4 py-3">
            <div class="flex items-center">
              edit
            </div>
          </th>
          <th scope="col" class="px-4 py-3">
            <div class="flex items-center">
              delete
            </div>
          </th>
        </tr>
      </thead>
      <tbody class="text-sm">
        <% Category.all.each do |categ| %>
          <tr title="<%= categ.description %>" class="odd:highlight-bg even:bg-regular border-b border-regular white-text hover:green-text hover:highlight-bg-accent cursor-pointer" onclick="window.location.href='<%= category_path(categ.id) %>'">
            <td class="px-4 py-1 whitespace-nowrap">
              <%= categ.title %>
            </td>
            <td class="px-4 py-1 whitespace-nowrap">
              <%= categ.updated_at.day %> <%= I18n.l(categ.updated_at, format: "%B")%> <%= categ.updated_at.year %>
            </td>
            <td colspan="2" class="px-4 py-1 whitespace-wrap">
              <%= categ.description.truncate(96, separator: ' ') %>
            </td>
            <td class="px-4 py-1 whitespace-wrap">
              <%= editButton("Edit this category", edit_category_path(categ)) %>
            </td>
            <td class="px-4 py-1 whitespace-wrap">
              <%= delButton("Delete a category", casc_news_path(categ), categ) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>