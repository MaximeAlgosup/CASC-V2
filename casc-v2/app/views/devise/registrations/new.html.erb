<div class="flex-col mx-auto p-4 white-text border border-regular highlight-bg rounded-3xl"
  style="width: 20%; height: 60%; margin-top: 5%">
  <div class="flex mx-auto my-4" style="max-width: 100%;">
    <img src="<%= asset_path('logo.svg') %>" class="w-24" alt="CASC Logo">
    <h1 class="mx-auto my-auto text-center">CASC</h1>
  </div>
  <hr class="mx-8 border-regular">
  <div class="mx-auto my-4" style="width: 80%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :name, class: "green-text text-sm" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>
      <div class="field">
        <%= f.label :email, class: "green-text text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "green-text text-sm" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "green-text text-sm" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>
      <div class="mt-8 mx-auto w-32">
        <%= f.submit "Sign up", class: "px-8 py-2 text-base border w-full rounded-lg border-action-green format-h2" %>
      </div>
      <div class="mx-auto w-20 text-center">
          <%= link_to "Login" , new_session_path(resource_name) %>
      </div>
      <% end %>

  </div>
</div>
