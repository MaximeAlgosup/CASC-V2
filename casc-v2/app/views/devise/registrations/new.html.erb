<div class="flex-col mx-auto p-4 border border-regular highlight-bg rounded-3xl h-fit w-fit mt-16">
  <div class="flex mx-auto my-4 w-max-100">
    <img src="<%= asset_path('logo.svg') %>" class="w-24" alt="CASC Logo">
    <h1 class="mx-auto my-auto text-center">CASC</h1>
  </div>
  <hr class="mx-8 border-regular">
  <div class="mx-auto my-4 w-full">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex">
        <%= textField(f, :name, "Name", resource) %>
      </div>
      <div class="flex">
        <%= emailField(f, :email, "Email", resource) %>
      </div>
      <div class="flex">
        <%= passwordField(f, :password, "Password", resource) %>
      </div>
      <div class="flex">
        <%= passwordField(f, :password_confirmation, "Confirm password", resource) %>
      </div>
      <div class="flex h-16">
        <%= submitButton(f, "Sign up") %>
      </div>
      <div class="flex h-10">
        <%= linkButton("Login", new_session_path(resource_name), true) %>
      </div>
    <% end %>
  </div>
</div>
