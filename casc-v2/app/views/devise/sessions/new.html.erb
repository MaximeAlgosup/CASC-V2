<div class="flex-col mx-auto mt-32 p-4 white-text border border-regular highlight-bg rounded-3xl"
  style="width: 20%; height: 60%;">
  <div class="flex mx-auto my-4" style="max-width: 80%;">
    <img src="<%= asset_path('logo.svg') %>" class="w-24" alt="CASC Logo">
    <h1 class="text-5xl mx-auto my-auto text-center">CASC</h1>
  </div>
  <hr class="mx-8">
  <div class="mx-auto my-4" style="width: 80%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="w-full my-2">
        <%= f.label :email, class: "green-text text-sm" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>

      <div class="w-full my-2">
        <p>
          <%= f.label :password, class: "green-text text-sm" %>
        </p>
        <%= f.password_field :password, autocomplete: "current-password" ,
          class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>
      <div class="float-right text-sm">
        <p class="underline">
          <%= link_to "I forgot my password" , new_password_path(resource_name) %>
        </p>
      </div>
      <br/>
      <div class="float-center">
        <%= f.submit "Login", class: "p-4 border text-base mx-auto" %>
      </div>
      <div class="mx-auto">
        <p>
          <%= link_to "Sign up" , new_registration_path(resource_name) %>
        </p>
      </div>
      <% end %>

  </div>
</div>