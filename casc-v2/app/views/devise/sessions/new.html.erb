<div class="flex-col mx-auto p-4 border border-regular highlight-bg rounded-3xl"
  style="width: 20%; height: 60%; margin-top: 5%">
  <div class="flex mx-auto my-4" style="max-width: 100%;">
    <img src="<%= asset_path('logo.svg') %>" class="w-24" alt="CASC Logo">
    <h1 class="mx-auto my-auto text-center">CASC</h1>
  </div>
  <hr class="mx-8 border-regular">
  <div class="mx-auto my-4" style="width: 80%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="w-full flex my-auto">
        <%= emailField(f, :email, "Email", resource) %>
      </div>

      <div class="w-full my-2">
        <p>
          <%= f.label :password, class: "green-text text-sm" %>
        </p>
        <%= f.password_field :password, autocomplete: "current-password" ,
          class: "w-full rounded-lg highlight-bg-accent border-none" %>
      </div>
      <div class="mt-8 mx-auto w-32">
        <%= f.submit "Login", class: "px-8 py-2 text-base border w-full rounded-lg border-action-green format-h2" %>
      </div>
      <div class="mx-auto w-20 text-center">
          <%= link_to "Sign up" , new_registration_path(resource_name) %>
      </div>
      <% end %>

  </div>
</div>